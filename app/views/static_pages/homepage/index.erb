  <script type="text/javascript">
    $(document).ready(function(){

      $(window).scroll(function (event) {
        var scrollTarget = 125
        if (isMobileDevice()) {
          scrollTarget = 200
        }
        var scroll = $(window).scrollTop();
        if (scroll < scrollTarget) {
          $('.navbar').removeClass('highlighted');
        } else {
          $('.navbar').addClass('highlighted');
        }
      });
      $('.modal input').on('click', function () {
        $(this).focus();
      })
      // if (isMobileDevice()) {
      //   $('body').addClass('isMobile');
      // } else {
        // $('body').addClass('isDesktop');
      // }
    });
  </script>

</head>

<body id="override">


  <!-- Notify about form submission -->
  <% if flash[:notice] %>
  <div id="alert">
    <a class="alert" href="#alert">Great! Someone from our outreach team will be in touch soon.</a>
  </div>
  <% end %>

  <!-- Notify about form submission -->
  <% if flash[:signin_error] %>
  <div id="alert">
    <a class="alert" href="#alert">Incorrect login info.</a>
  </div>
  <% end %>


  <% if flash[:freemium_permission_error] %>
  <div id="alert">
    <a class="alert" href="#alert">Your free ReadUp trial is almost ready! We'll let you know when you're off the waitlist.</a>
  </div>
  <% end %>

  <% if flash[:wrong_grade_level_error] %>
  <div id="alert">
    <a class="alert" href="#alert">Right now, ReadUp is only available for preschool. We'll email you when it's ready for your grade level!</a>
  </div>
  <% end %>

  <!-- modals -->
  <div>
    <%= render 'static_pages/homepage/modals/rayna-video' %>
    <%= render 'static_pages/homepage/modals/signup-name-password' %>
    <%= render 'static_pages/homepage/modals/gotta-wait' %>
    <%= render 'static_pages/homepage/modals/demo' %>
    <%= render 'static_pages/homepage/modals/signup-email' %>
    <%= render 'static_pages/homepage/modals/congrats-modal' %>
  </div>
  <!-- modals end -->




  <%= render 'static_pages/homepage/navbar_desktop' %>
  <%= render 'static_pages/homepage/navbar_mobile' %>


<div class="splash-new">
  <div
    class="splash-container"
    style="background: url('https://s3-us-west-2.amazonaws.com/readup-now/website/student-hero-resized.jpg')
          center
          top/cover
          no-repeat
          #3C8FCA;"
  >
    <div class="title";">
      <h1 id="pitch">
        ReadUp grades running records for you.
      </h1>
      <center>
        <h4 id="sub-pitch">
          ReadUp listens and grades reading so you can spend your time teaching.
        </h4>
      </center>

      <%= render 'static_pages/homepage/signup_form' %>

    </div>
  </div>
</div>



<section class="product-display" id="end-no-reading">
  <h1 class="section-banner">The end of scoring running records.</h1>
  <div class="pure-g">

    <div class="pure-u-1 pure-push-md-1-2 pure-u-md-1-2">
      <div class="product-img">
        <img src="/images/ipad-1.png" alt="">
      </div>
    </div>


    <div class="pure-u-1 pure-pull-md-1-2 pure-u-md-1-2">
