<!DOCTYPE html>
<html>
<head>
  
    <%= render 'static_pages/components/headers' %>

    <%= render 'static_pages/register/headers/mixpanel' %>

    <%= render 'static_pages/register/headers/libraries' %>

    <%= render 'static_pages/components/favicon' %>

    <!-- our scripts -->
    <script type="text/javascript" src="/js/validations.js"></script>
    <script type="text/javascript" src="/js/helpers.js"></script>
    <script type="text/javascript" src="/js/register.js"></script>

    <style>

      ul#navbar-header {
        background-color: #ed7a44;
      }
      
    </style>

</head>

<body id="override">
  <!-- navbar -->
  <% @locals = {text:@text,class_code:@class_code, locale:@locale,teacher_id:@teacher_id, teacher: @teacher, school: @school} %>
  <%= render 'static_pages/register/modals/user-name-phone', locals: @locals %>
  <%= render 'static_pages/register/modals/role', locals: @locals %>
  <%= render 'static_pages/register/modals/password', locals: @locals %>
  <%= render 'static_pages/register/modals/get-app', locals: @locals %>
  <%= render 'static_pages/register/modals/maintenance', locals: @locals %>

  <form id="hidden-inputs">
    <input type="hidden" name="teacher_sig" value="<%= teacher %>">
    <input type="hidden" name="teacher_id" value="<%= teacher_id %>">
    <input type="hidden" name="locale" value="<%= locale %>">
    <input type="hidden" name="class_code" value="<%= class_code %>">
  </form>


<footer>

</footer>
    
</body>

























