<%= form_for(@recording) do |f| %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :audio %><br>
    <%= f.file_field :audio %>
  </div>




  <%- if @recording.audio_data? %>
    <div class="field">
      <%= recording_tag @recording.recording_url(:thumb) %>
    </div>
    <div class="field">
      Remove attachment: <%= f.check_box :remove_recording %>
    </div>
  <%- end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>