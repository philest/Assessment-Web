<script type="text/javascript">


  var scrollTarget =  isMobileDevice() ? 50 : 160;




  $(document).ready(function(){


  function highlightNav () {
    // note that the stylings for highlight stuff is SASS!!!
    var scroll = $(window).scrollTop();
    if (scroll < scrollTarget) {
      $('.readup-nav').removeClass('highlighted');
    } else {
      $('.readup-nav').addClass('highlighted');
    }
  }


    highlightNav();
    $(window).scroll(function (event) {
      highlightNav();
    });
    $('.modal input').on('click', function () {
      $(this).focus();
    })
  });

  

