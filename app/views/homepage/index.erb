<style type="text/css">
  .form-container {
    position: absolute;
    margin: 0 auto;
  }

  .section-buffer {
    display: none;
    width: 100%;
    height: 130px;
  }

  .product-text {
    margin-top: 10px;
  }

  .product-text h2 {
    font-weight: bold;
    font-size: 1.4em;
    position: relative;
    z-index: 2;
  }

  .product-text ul {
     margin-left: 20px;
     width: 80%;
     text-align: left;
     position: relative;
  }

  .product-text ul p {
    margin-bottom: 20px;
    z-index: 2;
  }

  .product-display {

  }

  #get-started h1 {
    font-family: 'Proximanova Semibold';
    font-size: 1.8em;
    color: white;
  }

  #get-started p {
    font-weight: normal;
    color: white;
    font-size: 1.0em;
    text-align: center;
    margin-top: 25px;
    margin-bottom: 25px;
  }

  #get-started a {
    width: 200px;
    height: 75px;
    margin: 0 auto;
  }

  .step-2 {
    padding-top: 5em;
  }

  #hero-button {
    width: 150px;
    height: 50px;
    margin: 0 auto;
    text-align: center;
    font-size: 0.8em;
    display: block;
    font-family: 'Proximanova Semibold';
  }

  .how-it-works {
    font-size: 0.5em;
    margin-top: 20px;
    font-weight: 100;
  }

  .step-number-label-left {
    position: absolute;
    top: -35px;
    right: 40px;

    font-size: 4.0em;
    color: #EDF2F5;
    z-index: 1;


  }

  .step-number-label-right {
    position: absolute;
    top: -30px;
    left: -10px;

    font-size: 4.0em;
    color: #EDF2F5;
    z-index: 1;


  }

  /* mobile */
  @media (max-width: 35.5em) {
    .how-it-works {
      display: none;
    }
  }

  /* when columns collapse */
  @media (max-width: 48em) {
    .section-buffer {
      height: 235px;
    }
    #pitch h1 {
      font-size: 27px;
      padding-top: 45px;
    }
    .product-text {
      margin-top: 20px;
    }
    .product-text ul {
      margin: 0 auto;
      text-align: center;
      width: 100%;
    }
    .product-text h2 {
      text-align: center;
    }
    .product-text ul p {
      text-align: center;
    }
    .step-2 {
      padding-top: 1em;
    }

    .step-number-label-right {
      left: -30px;
    }
    .step-number-label-left {
      right: -30px;
    }

    #demoButton2 {
      display: block;
      margin: 0 auto;
    }
  }

  
</style>



