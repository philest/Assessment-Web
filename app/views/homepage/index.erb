<style type="text/css">


 .homepageTitlePg {
      color: white;
      padding-top: 8em;
      margin: 0 auto;
      width: 90%;
      font-size: 1.5em;
      font-family: 'Proximanova';
      font-weight: bold;
      line-height: 1.42857143;
      height: 50%;

    }


  .form-container {
    position: absolute;
    margin: 0 auto;
  }

  .section-buffer {
    display: none;
    width: 100%;
    height: 130px;
  }

  .product-text {
    margin-top: 10px;
  }

  .product-text h2 {
    font-weight: bold;
    font-size: 1.4em;
    position: relative;
    z-index: 2;
  }

  .product-text ul {
     margin-left: 20px;
     width: 80%;
     text-align: left;
     position: relative;
  }

  .product-text ul p {
    margin-bottom: 20px;
    z-index: 2;
  }

  .product-display {

  }

  #get-started h1 {
    font-family: 'Proximanova Semibold';
    font-size: 2.2em;
    color: white;
  }

  #get-started p {
    font-weight: normal;
    color: white;
    font-size: 1.0em;
    text-align: center;
    margin-top: 25px;
    margin-bottom: 25px;
  }

  #get-started a {
    width: 200px;
    height: 75px;
    margin: 0 auto;
  }

  .step-2 {
    padding-top: 5em;
  }

  #hero-button {
    width: 150px;
    height: 50px;
    margin: 0 auto;
    font-size: 0.8em;
    display: block;
    font-family: 'Proximanova Semibold';
    background-color: red;
    color: white;
    border-radius: 5px;
    padding: 10px;
  }

  .how-it-works {
    font-size: 0.5em;
    margin-top: 20px;
    font-weight: 100;
    color: white;
  }

  .how-it-works:hover {
    color:#e2e2e2;
  }

  .step-number-label-left {
    position: absolute;
    top: -35px;
    right: 40px;

    font-size: 4.0em;
    color: #EDF2F5;
    z-index: 1;


  }

  .step-number-label-right {
    position: absolute;
    top: -30px;
    left: -10px;

    font-size: 4.0em;
    color: #EDF2F5;
    z-index: 1;


  }

  .skew-up {
    transform: skewY(-2deg);
  }

  .skew-down-container {
    transform: skewY(2deg);
  }  

  .extra-padding {
    padding: 4.25rem;
    position: relative;
    padding-top: 5.9375rem;
    padding-bottom: 5.9375rem;
    padding-left: 4.25rem;
    padding-right: 4.25rem;
  }

  .content--max--width {
    position: relative;
    max-width: 1050px;
    margin-left: auto;
    margin-right: auto;
    z-index: 1;
  }

  .content--max--width:before {
      display: table;
    line-height: 0;
    content: "";
  }

  .quote-image {
    width: 195px;
    height: 195px;
    border-radius: 50%;
    display: inline-block;
    vertical-align: middle;
  }

  .quote-content-left {
    display: inline-block;
    vertical-align: middle;
    width: calc(100% - 205px);
    padding-left: 5.625rem;
  }

  .quote-content {
    display: inline-block;
  }

  .quote-title {
    font-size: 2.0rem;
    line-height: 2.875rem;
    margin-bottom: 2.25rem;
    letter-spacing: -0.6px;
    color: #337ab7;
    font-weight: 100;
    display: inline-block;
  }



  /* mobile */
  @media (max-width: 35.5em) {
    .how-it-works {
      display: none;
    }


    #get-started h1 {
      font-size: 1.8em;
    }


  }

  /* when columns collapse */
  @media (max-width: 48em) {
    .section-buffer {
      height: 235px;
    }
    #pitch h1 {
      font-size: 27px;
      padding-top: 45px;
    }

    h4#sub-pitch {
      width: 100%;
      font-size: 17px;
      }

    .product-text {
      margin-top: 20px;
    }
    .product-text ul {
      margin: 0 auto;
      text-align: center;
      width: 100%;
    }
    .product-text h2 {
      text-align: center;
    }
    .product-text ul p {
      text-align: center;
    }
    .step-2 {
      padding-top: 1em;
    }

    .step-number-label-right {
      left: -30px;
    }
    .step-number-label-left {
      right: -30px;
    }

    #demoButton2 {
      display: block;
      margin: 0 auto;
    }

    .quote-image { 
      margin-bottom: 1rem;
      display: block;
      width: 150px;
      height: 150px; 
    }

    [class*="quote-content"] {
      display: block;
      width: 100%;
      padding-left: 0;
    }

    .quote-title {
      font-size: 1.575rem;
      line-height: 2rem;
      margin-bottom: 1.0625rem;
    }


    .extra-padding {
    padding-top: 4.25rem;
    padding-bottom: 4.25rem;
    padding-left: 2.8125rem;
    padding-right: 2.8125rem; 
    }


  }

  
</style>



